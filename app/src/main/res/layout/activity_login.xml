<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xmlcode"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="150dp"
          android:src="@drawable/restaurants"
          android:layout_marginTop="40dp"
          app:tint="#D38E290A" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/aguafina_script"
            android:gravity="center"
            android:text="Cafe House"
            android:textColor="#D38E290A"
            android:textSize="40sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="@color/white"
            android:ems="10"
            android:gravity="center"
            android:hint="khatarnakgyan362@gmail.com"
            android:inputType="textEmailAddress"
            android:padding="3dp"
            android:shadowColor="#9C9344"
            android:textColorHint="#9A5C5656"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:ems="10"
            android:gravity="center"
            android:hint=".................."
            android:inputType="textPassword"
            android:padding="3dp"
            android:shadowColor="#9C9344"
            android:textColorHint="#9A5C5656"
            android:textSize="18sp" />

        <Button
            android:id="@+id/Registers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="#EDB730"
            android:padding="3dp"
            android:text="Sign In"
            android:textColor="#FA4E132F"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:id="@+id/view"
                android:layout_width="90dp"
                android:layout_height="2dp"
                android:background="#6D595555" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or with"
                android:textColor="#DC090808"
                android:textSize="16sp"></TextView>

            <View
                android:id="@+id/view2"
                android:layout_width="90dp"
                android:layout_height="2dp"
                android:background="#6D595555" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:background="#3B5998"
                android:drawableLeft="@drawable/facebook"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="Facebook"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="#DD4B39"
                android:drawableLeft="@drawable/google"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="Google"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>