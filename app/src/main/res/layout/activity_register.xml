<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/profile" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Image"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="5dp"/>


        <EditText
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/cornor"
            android:ems="10"
            android:gravity="center"
            android:hint="kumar ray"
            android:inputType="text"
            android:padding="3dp"
            android:shadowColor="#9C9344"
            android:textColorHint="#9A5C5656"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/cornor"
            android:ems="10"
            android:gravity="center"
            android:hint="............."
            android:inputType="textPassword"
            android:padding="3dp"
            android:shadowColor="#9C9344"
            android:textColorHint="#9A5C5656"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/cornor"
            android:ems="10"
            android:gravity="center"
            android:hint="8051370133"
            android:inputType="phone"
            android:padding="3dp"
            android:shadowColor="#9C9344"
            android:textColorHint="#9A5C5656"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/cornor"
            android:ems="10"
            android:gravity="center"
            android:hint="lasjfjl123@gmail.com"
            android:inputType="textEmailAddress"
            android:padding="3dp"
            android:shadowColor="#9C9344"
            android:textColorHint="#9A5C5656"
            android:textSize="18sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#EDB730"
            android:padding="3dp"
            android:text="Register"
            android:textColor="#FA4E132F"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:id="@+id/view"
                android:layout_width="90dp"
                android:layout_height="3dp"
                android:background="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or with"
                android:textSize="16sp">
            </TextView>

            <View
                android:id="@+id/view2"
                android:layout_width="90dp"
                android:layout_height="3dp"
                android:background="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:background="#3B5998"
                android:drawableLeft="@drawable/facebook"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="Facebook"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="#DD4B39"
                android:drawableLeft="@drawable/google"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="Google"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />
        </LinearLayout>



    </LinearLayout>
</RelativeLayout>